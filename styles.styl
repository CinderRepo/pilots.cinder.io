@import "nib"
@import "variables"

body
  width 100%
  height 100%
  user-select none
  avenir()
*
  -webkit-user-drag none
  box-sizing border-box

.sidebar
  position fixed
  top 0
  bottom 0
  width 170px
  //background midnight()
  //color white()
  color midnight()
  overflow-y scroll
  overflow-x hidden
  &.right
    right 0
    border-left 1px solid offWhite()
  &.left
    left 0
    border-right 1px solid offWhite()
  .create
    size(170,170)
    //background gray()
    border-bottom 1px solid offWhite()
  .title
    padding-left 10px
    padding-right 10px
    futura()
    color offGray()
    font-size 10px
    text-align left
  .logo
    margin-bottom 10px
    padding 0 10px 0 50px
    height 50px
    line-height 50px
    display block
    futura()
    font-size 18px
    text-align left
    .icon
      size(30,30)
      border-radius 30px
      position absolute
      top 10px
      left 10px
      //background white()
      background midnight()
  .list
    margin-bottom 20px
    .item
      .link
        padding-left 34px
        padding-right 10px
        position relative
        font-size 14px
        height 30px
        line-height 30px
        display block
        &:hover
          background gray()
        .icon
          position absolute
          top 7px
          left 10px
          size(16,16)
          //background white()
          background midnight()
          border-radius 16px
.content
  position absolute
  top 0
  right 170px
  bottom 0
  left 170px
  overflow hidden
  height 100%
  //margin-right 170px
  //margin-left 170px
  //height 10000px
  .title
    //text-align center
    padding 0 40px 0 40px
    line-height 1.5
    futura()
    font-size 24px
    color offGray()
  .tiles
    width 940px
    height 2000px
    margin 0 auto
    padding-right 5px
    padding-left 5px
  .tile
    width 300px
    height 210px
    float left
    margin-top 10px
    margin-right 5px
    margin-left 5px
    cursor pointer
    .preview
      width 300px
      height 169px
      background midnight()
      border-radius 4px
    .title
      font-size 14px
      padding 0
      line-height 20px
      text-align left
    .subtitle
      font-size 12px
      futura()
      text-align left
      line-height 14px
      color offerGray()
.toggle
  size(16,16)
  border-radius 16px
  position absolute
  top 17px
  z-index 3
  background midnight()
  cursor pointer
  &.left
    left 10px
  &.right
    right 10px
.scroller
  position absolute
  top 0
  bottom 0
  width 100%
  overflow-x hidden
  overflow-y auto

.player
  position relative
.video
  width 100%
  background black
  z-index 2
.play
  size(120,120)
  border-radius 120px
  background white()
  position absolute
  top 50%
  right 0
  left 0
  z-index 1
  margin -60px auto 0 auto
  cursor pointer
.about
  border-top 1px solid offWhite()
  background white()
  width 100%
  height 10000px
  position relative
  margin-top 50%
  z-index 2
  transition margin-top 300ms ease-in-out
  padding-top 20px
  padding-right 40px
  padding-bottom 20px
  padding-left 40px
  color midnight(0.8)
  .title
    text-align left
    padding 0
  .author
    futura()
    font-size 14px
    text-transform uppercase
    text-align left
    color midnight(0.40)
  .description
    padding-top 10px
    font-size 16px
    color midnight(0.80)

//Community
