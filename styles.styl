//Click Menu
.clickMenu
  position absolute
  top 0
  left 0
  z-index 999
  pointer-events none
  transform translate3d(0,0,0)
  -webkit-backface-visibility hidden
  transition transform 50ms ease-in-out
  .node
    size(40,40)
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    //border-radius 40px
    //border 2px solid midnight()
    //background transparent
    z-index 99
    transition opacity 100ms ease-out, transform 100ms ease-out
    opacity 0
    transform translate3d(0,0,0)
    cursor pointer
    &.origin
      transition opacity 100ms ease-out 100ms, transform 100ms ease-out 100ms
      pointer-events none
      .dot
        transition opacity 100ms ease-out 100ms, transform 100ms ease-out 100ms
        .inner
          size(40,40)
          border-radius 40px
          background midnight(0.9)
          position absolute
          top 50%
          left 50%
          margin -20px auto auto -20px
          transition transform 400ms ease-out
          transform-origin 50% 50%
          transform scale3d(0.2,0.2,0.2)
    .dot
      size(40,40)
      border-radius 40px
      border 2px solid midnight(0.85)
      background white(0.9)
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      transition opacity 100ms ease-out 100ms, transform 100ms ease-out 100ms
      transform scale3d(0,0,0)
      .inner
        size(32,32)
        margin 2px
        background midnight(0.9)
        transition width 100ms ease-out
        overflow hidden
        //futura()
        //line-height 38px
        //font-size 24px
        border-radius 40px
        //color midnight(0.8)
        position absolute
        .iconWrapper
          position absolute
          size(32,32)
          .icon
            padding 8px
        .title
          font-size 14px
          height 32px
          line-height 33px
          padding 0
          padding-left 32px
          color white()
          transition opacity 100ms ease-out
          opacity 0
          text-align left
  &.activated
    pointer-events auto
    cursor pointer
    .node
      opacity 1
      transition opacity 100ms ease-out 400ms, transform 100ms ease-out 400ms
      &.hovered
        z-index 999
        &[data-action="fund"]
          .dot
            width 92px
            .inner
              width 84px
              .title
                opacity 1
        &[data-action="browse"]
          .dot
            width 114px
            .inner
              width 106px
              .title
                opacity 1
        &[data-action="play"]
          .dot
            width 90px
            .inner
              width 82px
              .title
                opacity 1
        &[data-action="create"]
          .dot
            width 106px
            .inner
              width 98px
              .title
                opacity 1
        &[data-action="addMedia"]
          .dot
            width 132px
            .inner
              width 124px
              .title
                opacity 1
        &[data-action="addPoll"]
          .dot
            width 122px
            .inner
              width 114px
              .title
                opacity 1
        &[data-action="edit"]
          .dot
            width 86px
            .inner
              width 78px
              .title
                opacity 1
        &[data-action="follow"]
          .dot
            width 112px
            .inner
              width 104px
              .title
                opacity 1
      &.origin
        transition opacity 100ms ease-out, transform 100ms ease-out
        .dot
          transition opacity 100ms ease-out, transform 100ms ease-out
      &.top
        transform translate3d(0,-80px,0)
        //transition opacity 100ms ease-out 400ms, transform 100ms ease-out 400ms
        &.right
          transform translate3d(60px,-60px,0)
          //transition opacity 100ms ease-out 650ms, transform 100ms ease-out 650ms
        &.left
          transform translate3d(-60px,-60px,0)
          //transition opacity 100ms ease-out 950ms, transform 100ms ease-out 950ms
      &.right
        transform translate3d(80px,0,0)
        //transition opacity 100ms ease-out 700ms, transform 100ms ease-out 700ms
      &.bottom
        transform translate3d(0,80px,0)
        //transition opacity 100ms ease-out 800ms, transform 100ms ease-out 800ms
        &.right
          transform translate3d(60px,60px,0)
          //transition opacity 100ms ease-out 750ms, transform 100ms ease-out 750ms
        &.left
          transform translate3d(-60px,60px,0)
          //transition opacity 100ms ease-out 850ms, transform 100ms ease-out 850ms
      &.left
        transform translate3d(-80px,0,0)
        //transition opacity 100ms ease-out 900ms, transform 100ms ease-out 900ms
      &.origin
        .inner
          transform scale3d(1,1,1)
      .dot
        transition transform 100ms ease-out, width 100ms ease-out
        transform scale3d(1,1,1)

