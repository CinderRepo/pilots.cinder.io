@import "nib"
@import "variables"

html, body
  margin 0
  padding 0
  height 100%
  min-width 320px
  overflow hidden
body
  width 100%
  height 100%
  user-select none
  //border-top 20px solid white()
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-box-align stretch
  -webkit-box-flex 1
  &:after
    content ""
    //background white()
    height 20px
    position absolute
    top 0
    right 0
    left 0
    z-index 100
  avenir()
*
  webkit-user-drag none
  box-sizing border-box

.clickable
  transition opacity 100ms ease-in-out, transform 100ms ease-in-out
  &[data-state="focused"]
    opacity 0.8
    transform scale3d(1.1,1.1,1.1)
  &[data-state="blurred"]
    opacity 0.2
    transform scale3d(0.8,0.8,0.8)

.firstPane
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-box-align stretch
  -webkit-box-flex 1
  -webkit-overflow-scrolling touch
  overflow auto
  position relative
  z-index 1
.secondPane
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-box-align stretch
  -webkit-box-flex 1
  -webkit-overflow-scrolling touch
  overflow auto
.thirdPane
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-box-align stretch
  -webkit-box-flex 1
  margin-bottom -1px
  position relative

.sidebar
  position fixed
  top 0
  bottom 0
  width 170px
  //background midnight()
  //color white()
  color midnight()
  overflow-y scroll
  overflow-x hidden
  &.right
    right 0
    border-left 1px solid offWhite()
  &.left
    left 0
    border-right 1px solid offWhite()
  .create
    size(170,170)
    //background gray()
    border-bottom 1px solid offWhite()
  .title
    padding-left 10px
    padding-right 10px
    futura()
    color offGray()
    font-size 10px
    text-align left
  .logo
    margin-bottom 10px
    padding 0 10px 0 50px
    height 50px
    line-height 50px
    display block
    futura()
    font-size 18px
    text-align left
    .icon
      size(30,30)
      border-radius 30px
      position absolute
      top 10px
      left 10px
      //background white()
      background midnight()
  .list
    margin-bottom 20px
    .item
      .link
        padding-left 34px
        padding-right 10px
        position relative
        font-size 14px
        height 30px
        line-height 30px
        display block
        &:hover
          background gray()
          color offWhite()
          .icon
            & > *
              fill offWhite()
              stroke offWhite()
        .icon
          position absolute
          top 7px
          left 10px
          size(16,16)
          //background white()
          background midnight()
          border-radius 16px
.content
  position absolute
  top 0
  //right 170px
  right 0
  bottom 0
  left 0
  //left 170px
  overflow hidden
  height 100%
  //margin-right 170px
  //margin-left 170px
