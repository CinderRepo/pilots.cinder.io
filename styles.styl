  padding 10px 40px 0 40px
  line-height 1.5
  futura()
  font-size 24px
  color offGray()
.tiles
  width 940px
  //height 2000px
  margin 0 auto
  padding-right 5px
  padding-left 5px
.tile
  width 300px
  height 210px
  float left
  margin-top 10px
  margin-right 5px
  margin-left 5px
  cursor pointer
  .preview
